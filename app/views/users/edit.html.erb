<h1>Editing user</h1>

<%= render "form", user: @user %>

<br>

<div>
  <%= link_to "Show this user", @user %> |
  <%= link_to "Back to users", users_path %> |
  <% if @user.equipe_composer_items.any? %>
    <h3>Associated Teams:</h3>
    <ul>
      <% @user.equipe_composer_items.each do |item| %>
        <li>
          <%= link_to item.equipe_composer.name, item.equipe_composer %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
